<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="80dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:layout_marginRight="5dp"
            android:id="@+id/as_img_shop"
            android:scaleType="centerCrop"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/as_ll_goodface"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/as_img_goodface"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/soildgoodface" />

            <TextView
                android:id="@+id/as_tv_goodface"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="好评"
                android:textColor="@color/grayfont"
                android:textSize="@dimen/content_text_s12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/as_ll_midface"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/as_img_midface"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/strokemidface" />

            <TextView
                android:id="@+id/as_tv_midface"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="中评"
                android:textColor="@color/grayfont"
                android:textSize="@dimen/content_text_s12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/as_ll_badface"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/as_img_badface"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/strokebadface" />

            <TextView
                android:id="@+id/as_tv_badface"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="差评"
                android:textColor="@color/grayfont"
                android:textSize="@dimen/content_text_s12" />
        </LinearLayout>


        <View
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background="@mipmap/suggestion_line"
        android:layout_height="1px"/>

    <com.yhkj.yymall.view.flowlayout.TagFlowLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:id="@+id/as_flowlayout"
        android:layout_height="wrap_content">
    </com.yhkj.yymall.view.flowlayout.TagFlowLayout>

    <EditText
        android:layout_width="match_parent"
        android:padding="10dp"
        android:hint="请将您对商品的评价反馈给YIYIYAYA吧"
        android:textSize="@dimen/content_text_s12"
        android:textColor="@color/grayfont"
        android:id="@+id/as_et_content"
        android:textColorHint="@color/grayfont_2"
        android:maxLength="500"
        android:gravity="start"
        android:background="@null"
        android:layout_height="100dp" />

    <com.yhkj.yymall.view.PercentLinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_height="80dp"
        android:orientation="horizontal">


        <RelativeLayout
            android:id="@+id/as_rl_upload_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="20%">

            <ImageView
                android:id="@+id/as_img_upload_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/test"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/as_img_delete_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:src="@mipmap/ic_nor_reddelete"
                android:visibility="visible" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/as_rl_upload_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="20%">

            <ImageView
                android:id="@+id/as_img_upload_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/test"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/as_img_delete_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:src="@mipmap/ic_nor_reddelete"
                android:visibility="visible" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/as_rl_upload_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="20%">

            <ImageView
                android:id="@+id/as_img_upload_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/test"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/as_img_delete_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:src="@mipmap/ic_nor_reddelete"
                android:visibility="visible" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/as_rl_upload_4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="20%">

            <ImageView
                android:id="@+id/as_img_upload_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/test"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/as_img_delete_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:src="@mipmap/ic_nor_reddelete"
                android:visibility="visible" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/as_rl_upload_5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="20%">

            <ImageView
                android:id="@+id/as_img_upload_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/test"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/as_img_delete_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:src="@mipmap/ic_nor_reddelete"
                android:visibility="visible" />
        </RelativeLayout>
        <TextView
            android:id="@+id/as_tv_takephoto"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:background="@color/grayfont_4"
            android:drawableTop="@mipmap/camera"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:text="添加照片\n(最多5张)"
            android:textColor="@color/grayfont_1"
            android:textSize="@dimen/content_text_s8"
            android:visibility="visible"
            app:layout_heightPercent="90%"
            app:layout_widthPercent="20%" />
    </com.yhkj.yymall.view.PercentLinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/graybg"
        android:layout_height="20dp"/>


</LinearLayout>