<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/vps_rl_bg"
    android:layout_height="wrap_content">
    <android.support.percent.PercentRelativeLayout
        android:id="@+id/vps_rl_popview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="47%"
        android:background="@color/white"
        android:orientation="vertical">

        <View android:layout_width="match_parent"
            android:background="@mipmap/suggestion_line"
            android:layout_height="1px"/>

        <LinearLayout
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_width="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:background="@color/ttbalck_bg"
                android:textColor="@color/white"
                android:id="@+id/vvc_tv_lasttime"
                android:layout_centerHorizontal="true"
                android:padding="5dp"
                android:layout_marginBottom="10dp"
                android:textSize="@dimen/content_text_s14"
                android:text="剩余控制时间：55:55"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:background="@mipmap/ic_nor_controlbg">

                <RelativeLayout
                    android:id="@+id/vvc_rl_topclick"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/vv_img_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/ic_nor_toparrow" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp">

                    <RelativeLayout
                        android:id="@+id/vvc_rl_leftclick"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/vv_img_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/ic_nor_leftarrow" />
                    </RelativeLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_weight="1"
                        android:layout_height="1px"/>

                    <RelativeLayout
                        android:id="@+id/vvc_rl_rightclick"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/vv_img_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/ic_nor_controlrightarrow" />
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/vvc_rl_bottomclick"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/vv_img_bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/ic_nor_bottomarrow" />

                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>



    </android.support.percent.PercentRelativeLayout>
</android.support.percent.PercentRelativeLayout>