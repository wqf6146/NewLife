<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:layout_height="100dp">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="match_parent">

            <View
                android:id="@+id/il_view_line_top"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_above="@+id/il_img_circle_2"
                android:layout_centerHorizontal="true"
                android:background="#d8d8d8"
                android:visibility="visible" />

            <ImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/ic_nor_graycircle"
                android:id="@+id/il_img_circle_2"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content" />

            <View
                android:id="@+id/il_view_line_bottom"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/il_img_circle_2"
                android:layout_centerHorizontal="true"
                android:background="#d8d8d8"
                android:visibility="visible" />
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="5"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:text="您的订单开始处理"
            android:textSize="@dimen/content_text_s12"
            android:textColor="@color/grayfont_1"
            android:padding="10dp"
            android:id="@+id/il_tv_desc"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/grayfont_1"
            android:textSize="@dimen/content_text_s12"
            android:text="2017-06-29 05:20:30"
            android:paddingLeft="10dp"
            android:id="@+id/il_tv_time"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:background="@mipmap/suggestion_line"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="1px"/>

    </LinearLayout>

</LinearLayout>