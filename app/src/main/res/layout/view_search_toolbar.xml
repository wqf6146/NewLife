<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vt_toolbar_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/vt_btn_left"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/vt_tv_search"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:background="@drawable/tv_search_bg"
        android:drawableLeft="@mipmap/ic_nor_gray_search"
        android:drawableRight="@mipmap/ic_nor_scan"
        android:gravity="center_vertical"
        android:hint="搜索更多"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="#333333"
        android:textColorHint="#929292"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/vt_btn_right"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:padding="3dp"
        android:layout_marginRight="10dp"
        android:src="@mipmap/ic_nor_classily"
        android:visibility="visible" />

    <TextView
        android:id="@+id/vt_btn_right_2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:textSize="@dimen/content_text_s14"
        android:textColor="@color/grayfont"
        android:visibility="gone" />
</LinearLayout>