<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        app:layout_widthPercent="80%"
        app:layout_heightPercent="30%">

        <TextView
            android:id="@+id/aspp_tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请为账户1182***3085"
            android:textColor="@color/grayfont"
            android:textSize="@dimen/content_text_s14" />
        <TextView
            android:layout_width="wrap_content"
            android:text="设置6位数字支付密码"
            android:layout_margin="10dp"
            android:textColor="@color/grayfont"
            android:textSize="@dimen/content_text_s16"
            android:layout_height="wrap_content" />

        <com.yhkj.yymall.view.PasswordView
            android:inputType="number"
            android:id="@+id/aspp_passwordview"
            android:layout_width="match_parent"
            android:layout_height="50dp" />


    </LinearLayout>


</android.support.percent.PercentRelativeLayout>