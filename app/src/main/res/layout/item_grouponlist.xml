<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:paddingRight="5dp"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:layout_margin="2dp"
        android:elevation="3dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <ImageView
                android:id="@+id/ihg_img_shop_1"
                android:layout_width="match_parent"
                android:src="@mipmap/ic_nor_srcpic"
                android:layout_height="match_parent"
                android:scaleType="centerInside" />
            <ImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/ic_nor_taggroup"
                android:layout_height="wrap_content" />
        </FrameLayout>

        <TextView
            android:id="@+id/ihg_tv_shopname_1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:maxLines="2"
            android:textColor="@color/black_bg"
            android:textSize="@dimen/content_text_s12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ihg_tv_price_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/content_text_s16" />

            <TextView
                android:id="@+id/ihg_tv_marketPrice_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/grayfont"
                android:textSize="@dimen/content_text_s12" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ihg_tv_sale_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/grayfont"
                android:textSize="@dimen/content_text_s10" />

            <TextView
                android:id="@+id/ihg_tv_gopay_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/tv_bg_circle_red"
                android:gravity="center"
                android:padding="5dp"
                android:text="立即抢购"
                android:textColor="@color/white"
                android:textSize="@dimen/content_text_s12" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>