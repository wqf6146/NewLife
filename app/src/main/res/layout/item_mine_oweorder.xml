<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:id="@+id/imo_rl_order"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="我的订单"
            android:textSize="@dimen/content_text_s14"
            android:textColor="@color/blackfont_1"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/arrowright"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:background="@mipmap/suggestion_line"
        android:layout_height="0.1dp"/>

    <com.yhkj.yymall.view.BottomBarView.BottomBar
        android:layout_width="match_parent"
        android:id="@+id/imo_bottombar"
        android:layout_height="?attr/actionBarSize"/>

</LinearLayout>