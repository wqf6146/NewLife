<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:id="@+id/aw_view_statusbar"
        android:background="@color/theme_bule"
        android:layout_height="0dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/theme_bule"
        android:layout_height="45dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/aw_img_back"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_nor_arrowleft"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/aw_tv_title"
            android:layout_centerInParent="true"
            android:textSize="@dimen/content_text_s14"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <WebView
            android:layout_width="match_parent"
            android:id="@+id/aw_webview"
            android:background="@color/white"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="match_parent">
        </WebView>
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/aw_progressbar"
            android:layout_height="wrap_content" />
    </FrameLayout>

</LinearLayout>
