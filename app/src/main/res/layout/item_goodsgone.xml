<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/graybg"
    android:paddingBottom="20dp"
    android:layout_height="300dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_nor_goodgone"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="商品下架了，看看其他好货吧"
            android:textSize="@dimen/content_text_s12"
            android:textColor="@color/theme_bule"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:gravity="center"
        android:layout_height="wrap_content">
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@mipmap/suggestion_line"
            android:layout_height="1dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/shopcar_heart"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/grayfont_1.5"
            android:textSize="@dimen/content_text_s16"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="猜你喜欢"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@mipmap/suggestion_line"
            android:layout_height="1dp"/>
    </LinearLayout>


</RelativeLayout>