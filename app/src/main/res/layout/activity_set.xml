<?xml version="1.0" encoding="utf-8"?>
<com.yhkj.yymall.view.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/as_rl_userdata"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:padding="10dp"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%">

        <ImageView
            android:id="@+id/as_img_userdata"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@mipmap/ic_nor_user" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/as_img_userdata"
            android:text="个人资料"
            android:textSize="@dimen/content_text_s14" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@mipmap/ic_nor_gray_arrowright" />
    </RelativeLayout>

    <View
        android:layout_width="0dp"
        app:layout_widthPercent="90%"
        app:layout_heightPercent="0.1%"
        android:background="@mipmap/suggestion_line"
        android:layout_height="0dp"/>

    <RelativeLayout
        android:id="@+id/as_rl_acountsafety"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:padding="10dp"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%">

        <ImageView
            android:id="@+id/as_img_acountsecurity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@mipmap/ic_nor_lock" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/as_img_acountsecurity"
            android:text="账户安全"
            android:textSize="@dimen/content_text_s14" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@mipmap/ic_nor_gray_arrowright" />
    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@mipmap/suggestion_line"
        app:layout_heightPercent="0.1%"
        app:layout_widthPercent="90%" />

    <RelativeLayout
        android:id="@+id/as_rl_realnameauth"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:padding="10dp"
        android:visibility="gone"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%">

        <ImageView
            android:id="@+id/as_img_authentication"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@mipmap/ic_nor_userauthe" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/as_img_authentication"
            android:text="实名认证"
            android:textSize="@dimen/content_text_s14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/as_img_authentication_line"
            android:text="未认证"
            android:textColor="@color/grayfont"
            android:textSize="@dimen/content_text_s14" />

        <ImageView
            android:id="@+id/as_img_authentication_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@mipmap/ic_nor_gray_arrowright" />
    </RelativeLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@mipmap/suggestion_line"
        android:visibility="gone"
        app:layout_heightPercent="0.1%"
        app:layout_widthPercent="90%" />

    <RelativeLayout
        android:id="@+id/as_rl_certificateinfo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:padding="10dp"
        android:visibility="gone"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%">

        <ImageView
            android:id="@+id/as_img_certificateinfo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@mipmap/ic_nor_certificate" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/as_img_certificateinfo"
            android:text="证件信息"
            android:textSize="@dimen/content_text_s14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/as_img_version_right"
            android:text="V.1.0"
            android:textColor="@color/grayfont"
            android:textSize="@dimen/content_text_s14" />

        <ImageView
            android:id="@+id/as_img_version_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@mipmap/ic_nor_gray_arrowright" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/as_rl_about"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:padding="10dp"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%">

        <ImageView
            android:id="@+id/as_img_aboutyyyy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@mipmap/ic_nor_about" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/as_img_aboutyyyy"
            android:text="关于YiYiYaYa"
            android:textSize="@dimen/content_text_s14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/as_img_right"
            android:text="@string/version"
            android:textColor="@color/grayfont"
            android:textSize="@dimen/content_text_s14" />

        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_nor_gray_arrowright"
            android:padding="10dp"
            android:id="@+id/as_img_right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_width="0dp"
        app:layout_widthPercent="90%"
        app:layout_heightPercent="0.1%"
        android:background="@mipmap/suggestion_line"
        android:layout_height="0dp"/>

    <RelativeLayout
        android:id="@+id/as_rl_clean"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:padding="10dp"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%">

        <ImageView
            android:id="@+id/as_img_clean"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@mipmap/ic_nor_clean" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/as_img_clean"
            android:text="清理缓存"
            android:textSize="@dimen/content_text_s14" />

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/grayfont"
            android:textSize="@dimen/content_text_s12"
            android:id="@+id/as_tv_cache"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/as_img_rightarrow"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/as_img_rightarrow"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@mipmap/ic_nor_gray_arrowright" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"/>

    <View
        android:layout_width="match_parent"
        android:background="@mipmap/suggestion_line"
        android:layout_height="1px"/>
    <TextView
        android:layout_width="0dp"
        app:layout_heightPercent="8%"
        app:layout_widthPercent="100%"
        android:id="@+id/as_tv_logout"
        android:text="退出登录"
        android:background="@color/white"
        android:gravity="center"
        android:textSize="@dimen/content_text_s16"
        android:textColor="@color/redfont"
        android:layout_height="0dp" />

</com.yhkj.yymall.view.PercentLinearLayout>