<?xml version="1.0" encoding="utf-8"?>
<com.yhkj.yymall.view.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <com.yhkj.yymall.view.PercentLinearLayout
        android:layout_width="0dp"
        android:orientation="horizontal"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="30%"
        android:gravity="center"
        android:layout_height="0dp">

        <com.yhkj.yymall.view.PercentLinearLayout
            android:id="@+id/ab_ll_lady"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:orientation="vertical"
            app:layout_heightPercent="60%"
            app:layout_widthPercent="40%">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_nor_bigladybaby"
                app:layout_heightPercent="70%"
                app:layout_widthPercent="70%" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ab_img_lady"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_nor_graycicle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="孕妈"
                    android:textColor="@color/grayfont"
                    android:textSize="@dimen/content_text_s12" />
            </LinearLayout>
        </com.yhkj.yymall.view.PercentLinearLayout>

        <com.yhkj.yymall.view.PercentLinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            app:layout_widthPercent="40%"
            android:layout_gravity="center"
            app:layout_heightPercent="60%"
            android:id="@+id/ab_ll_babylady"
            android:clickable="true"
            android:layout_height="0dp">
            <ImageView
                android:layout_width="0dp"
                android:src="@mipmap/ic_nor_bigbaby"
                android:layout_gravity="center_horizontal"
                app:layout_widthPercent="70%"
                app:layout_heightPercent="70%"
                android:layout_height="0dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ab_img_ladybaby"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_nor_graycicle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="已有宝宝"
                    android:textColor="@color/grayfont"
                    android:textSize="@dimen/content_text_s12" />
            </LinearLayout>
        </com.yhkj.yymall.view.PercentLinearLayout>


    </com.yhkj.yymall.view.PercentLinearLayout>

    <TextView
        android:id="@+id/ab_tv_babyyaya"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="完善宝贝信息获得丫丫"
        android:textColor="@color/grayfont"
        android:textSize="@dimen/content_text_s14" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.yhkj.yymall.view.PercentLinearLayout
            android:id="@+id/ab_ll_babyedit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <com.yhkj.yymall.view.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ab_tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="性别"
                    android:textColor="@color/grayfont"
                    android:textSize="@dimen/content_text_s14" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@mipmap/suggestion_line"
                    app:layout_heightPercent="0.1%"
                    app:layout_widthPercent="50%" />
            </com.yhkj.yymall.view.PercentLinearLayout>

            <com.yhkj.yymall.view.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ab_tv_birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="生日"
                    android:textColor="@color/grayfont"
                    android:textSize="@dimen/content_text_s14" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@mipmap/suggestion_line"
                    app:layout_heightPercent="0.1%"
                    app:layout_widthPercent="50%" />
            </com.yhkj.yymall.view.PercentLinearLayout>
        </com.yhkj.yymall.view.PercentLinearLayout>

        <com.yhkj.yymall.view.PercentLinearLayout
            android:id="@+id/ab_ll_babyexpected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ab_tv_expecteddate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="预产期" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@mipmap/suggestion_line"
                app:layout_heightPercent="0.1%"
                app:layout_widthPercent="50%" />
        </com.yhkj.yymall.view.PercentLinearLayout>
    </FrameLayout>




</com.yhkj.yymall.view.PercentLinearLayout>