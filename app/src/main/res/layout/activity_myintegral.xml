<?xml version="1.0" encoding="utf-8"?>
<com.yhkj.yymall.view.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:padding="10dp"
        app:layout_heightPercent="30%"
        app:layout_widthPercent="100%">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@mipmap/ic_nor_captainamerica" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的积分"
                android:textColor="@color/theme_bule"
                android:textSize="@dimen/content_text_s14" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/am_ll_yy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/am_tv_myinte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/theme_bule"
                android:textSize="@dimen/content_text_s28" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="分"
                android:textColor="@color/theme_bule"
                android:textSize="@dimen/content_text_s12" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/am_ll_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@mipmap/ic_nor_money" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="签到得积分"
                android:textColor="@color/grayfont"
                android:textSize="@dimen/content_text_s16" />

            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@mipmap/ic_nor_gray_arrowright"
                android:visibility="visible" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@mipmap/suggestion_line"
            android:layout_marginLeft="10dp"
            android:layout_height="1px"/>
        <LinearLayout
            android:id="@+id/am_ll_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@mipmap/ic_nor_money" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完善个人信息得积分"
                android:textColor="@color/grayfont"
                android:textSize="@dimen/content_text_s16" />

            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/am_tv_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="@color/theme_bule"
                android:textSize="@dimen/title_text_s14" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@mipmap/ic_nor_gray_arrowright"
                android:visibility="visible" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@mipmap/suggestion_line"
            android:layout_marginLeft="10dp"
            android:layout_height="1px"/>
        <LinearLayout
            android:id="@+id/am_ll_buyshop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@mipmap/ic_nor_money" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购买商品得积分"
                android:textColor="@color/grayfont"
                android:textSize="@dimen/content_text_s16" />

            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@mipmap/ic_nor_gray_arrowright"
                android:visibility="visible" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@mipmap/suggestion_line"
            android:layout_marginLeft="10dp"
            android:layout_height="1px"/>
        <LinearLayout
            android:id="@+id/am_ll_shopeva"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@mipmap/ic_nor_money" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评价商品得积分"
                android:textColor="@color/grayfont"
                android:textSize="@dimen/content_text_s16" />

            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/am_tv_shopeva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="@color/theme_bule"
                android:textSize="@dimen/title_text_s14" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@mipmap/ic_nor_gray_arrowright" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="@mipmap/suggestion_line"
            android:layout_marginLeft="10dp"
            android:layout_height="1px"/>

        <LinearLayout
            android:id="@+id/am_ll_draw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@mipmap/ic_nor_money" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="抽奖得积分"
                android:textColor="@color/grayfont"
                android:textSize="@dimen/content_text_s16" />

            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@mipmap/ic_nor_gray_arrowright" />
        </LinearLayout>
    </LinearLayout>

</com.yhkj.yymall.view.PercentLinearLayout>