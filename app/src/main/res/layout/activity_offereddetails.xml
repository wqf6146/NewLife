<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_offereddetails_shop"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_offereddetails_shopname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="@dimen/content_text_s16" />

            <TextView
                android:id="@+id/tv_offereddetails_numb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/grayfont"
                android:textSize="@dimen/content_text_s12" />

            <TextView
                android:id="@+id/tv_offereddetails_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textColor="@color/grayfont"
                android:textSize="@dimen/content_text_s14" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#FFF"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ao_tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:text="等待成团，仅剩一个名额。"
            android:textColor="@color/grayfont"
            android:textSize="@dimen/content_text_s14" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_height="80dp">
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:scrollbars="none"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content">
                <com.yhkj.yymall.view.NestFullListView.NestFullListView
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/ag_listview"
                    android:layout_height="wrap_content"/>
            </HorizontalScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grayfont"
                android:text="剩余"
                android:textSize="@dimen/content_text_s14" />

            <TextView
                android:id="@+id/tv_offereddetails_hor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tv_yuan_black"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textColor="#FFF"
                android:gravity="center"
                android:textSize="@dimen/content_text_s14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grayfont"
                android:text="小时"
                android:textSize="@dimen/content_text_s14" />

            <TextView
                android:id="@+id/tv_offereddetails_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tv_yuan_black"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textColor="#FFF"
                android:textSize="@dimen/content_text_s14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grayfont"
                android:text="分 结束"
                android:textSize="@dimen/content_text_s14" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_offereddetails_offere"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bt_yuan_blue"
            android:gravity="center"
            android:text="一键参团"
            android:textColor="#FFF"
            android:textSize="@dimen/content_text_s16" />


    </LinearLayout>
</LinearLayout>