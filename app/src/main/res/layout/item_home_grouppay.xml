<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll_home_groupon"
        android:layout_width="wrap_content"
        android:padding="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <View
                android:layout_width="5dp"
                android:background="@color/common_pink"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="团购好货"
                android:textColor="@color/common_pink"
                android:textSize="@dimen/content_text_s14"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1px"/>

        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/content_text_s12"
            android:textColor="@color/grayfont"
            android:text="全部"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="15dp"
            android:src="@mipmap/arrowright"
            android:layout_height="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_home_groupon1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:layout_margin="2dp"
            android:elevation="3dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <ImageView
                    android:id="@+id/ihg_img_shop_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside" />

                <ImageView
                    android:id="@+id/ihg_img_shop_tag1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_nor_taggroup"
                    android:visibility="gone" />
            </FrameLayout>



            <TextView
                android:id="@+id/ihg_tv_shopname_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:maxLines="2"
                android:textColor="@color/black_bg"
                android:textSize="@dimen/content_text_s12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/ihg_tv_price_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/content_text_s16" />

                <TextView
                    android:id="@+id/ihg_tv_marketPrice_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/grayfont"
                    android:textSize="@dimen/content_text_s12" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/ihg_tv_sale_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/grayfont"
                    android:textSize="@dimen/content_text_s10" />

                <TextView
                    android:id="@+id/ihg_tv_gopay_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/tv_bg_circle_red"
                    android:gravity="center"
                    android:padding="5dp"
                    android:visibility="gone"
                    android:text="立即抢购"
                    android:textColor="@color/white"
                    android:textSize="@dimen/content_text_s12" />
            </RelativeLayout>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_home_groupon2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingRight="10dp"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:layout_margin="2dp"
            android:elevation="3dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <ImageView
                    android:id="@+id/ihg_img_shop_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@mipmap/ic_nor_taggroup"
                    android:id="@+id/ihg_img_shop_tag2"
                    android:visibility="gone"
                    android:layout_height="wrap_content" />
            </FrameLayout>


            <TextView
                android:id="@+id/ihg_tv_shopname_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:maxLines="2"
                android:textColor="@color/black_bg"
                android:textSize="@dimen/content_text_s12" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/ihg_tv_price_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/content_text_s16" />

                <TextView
                    android:id="@+id/ihg_tv_marketPrice_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/grayfont"
                    android:textSize="@dimen/content_text_s12" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/ihg_tv_sale_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/grayfont"
                    android:textSize="@dimen/content_text_s10" />

                <TextView
                    android:id="@+id/ihg_tv_gopay_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:background="@drawable/tv_bg_circle_red"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="立即抢购"
                    android:textColor="@color/white"
                    android:textSize="@dimen/content_text_s12" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>