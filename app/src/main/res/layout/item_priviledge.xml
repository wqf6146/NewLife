<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/white"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_width="wrap_content"
        android:src="@mipmap/ic_nor_crow"
        android:id="@+id/am_img_crow"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_toRightOf="@+id/am_img_crow"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical"
        android:layout_toLeftOf="@+id/am_tv_goevaluate"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/content_text_s14"
                android:text="评价返积分"
                android:id="@+id/ip_tv_title"
                android:textColor="@color/grayfont"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/content_text_s8"
                android:textColor="@color/white"
                android:padding="2dp"
                android:id="@+id/ip_tv_tag"
                android:background="@drawable/tv_bg_circle_deepblue"
                android:text="v1及以上可享用"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/content_text_s12"
            android:text="评价商品可获得积分"
            android:id="@+id/ip_tv_content"
            android:textColor="@color/grayfont"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/am_tv_goevaluate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/tv_blue_square_bg"
        android:padding="2dp"
        android:text="去评价"
        android:textColor="@color/theme_bule"
        android:textSize="@dimen/content_text_s12"
        android:visibility="gone" />
</RelativeLayout>