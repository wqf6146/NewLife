<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/ic_nor_bigbluenike"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="置换成功"
                android:textColor="@color/theme_bule"
                android:textSize="@dimen/content_text_s14"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/ar_tv_remainyy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="剩余丫丫6000个"
                android:textColor="@color/theme_bule"
                android:textSize="@dimen/content_text_s14" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/ar_tv_goyy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/stroke_square_gray"
                    android:padding="5dp"
                    android:text="查看丫丫"
                    android:textColor="@color/grayfont"
                    android:textSize="@dimen/content_text_s14" />

                <TextView
                    android:id="@+id/ar_tv_gohome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/stroke_square_gray"
                    android:padding="5dp"
                    android:text="返回首页"
                    android:textColor="@color/grayfont"
                    android:textSize="@dimen/content_text_s14" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>