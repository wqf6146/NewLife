<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"

        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/content_text_s14"
            android:textColor="@color/grayfont"
            android:layout_centerVertical="true"
            android:text="类型"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/ar_tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="充值"
            android:textColor="@color/grayfont"
            android:textSize="@dimen/content_text_s14" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:background="@mipmap/suggestion_line"
        android:layout_height="0.1dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="金额"
            android:textColor="@color/grayfont"
            android:textSize="@dimen/content_text_s14" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/content_text_s14"
            android:textColor="@color/grayfont"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/ar_tv_price"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:background="@mipmap/suggestion_line"
        android:layout_height="0.1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/ap_ll_paytype"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/ap_tv_paytag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="支付方式"
                android:textColor="@color/grayfont"
                android:textSize="@dimen/content_text_s14" />

            <TextView
                android:id="@+id/ar_tv_paytype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/grayfont"
                android:textSize="@dimen/content_text_s14" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/suggestion_line"
            android:layout_height="0.1dp"/>
    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/content_text_s14"
            android:textColor="@color/grayfont"
            android:layout_centerVertical="true"
            android:text="时间"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/content_text_s14"
            android:textColor="@color/grayfont"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/ar_tv_time"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:background="@mipmap/suggestion_line"
        android:layout_height="0.1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ap_ll_no"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:padding="10dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/ap_tv_ordertag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="流水编号"
                android:textColor="@color/grayfont"
                android:textSize="@dimen/content_text_s14" />

            <TextView
                android:id="@+id/ar_tv_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/grayfont"
                android:textSize="@dimen/content_text_s14" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/suggestion_line" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/content_text_s14"
            android:textColor="@color/grayfont"
            android:layout_centerVertical="true"
            android:text="余额"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/content_text_s14"
            android:textColor="@color/grayfont"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/ar_tv_balance"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>