<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vt_toolbar_bg"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/vt_btn_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_nor_gray_arrowleft"
        android:padding="10dp" />

    <EditText
        android:id="@+id/vt_edit_search"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6dp"
        android:layout_weight="1"
        android:background="@drawable/tv_search_bg"
        android:gravity="center_vertical"
        android:hint="搜索品牌商品"
        android:imeOptions="actionSearch"
        android:maxLines="1"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:singleLine="true"
        android:textColor="#333333"
        android:textColorHint="#929292"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/vt_btn_right"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:src="@mipmap/ic_nor_classily"
        android:visibility="gone" />

    <TextView
        android:id="@+id/vt_btn_right_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/content_text_s12"
        android:textColor="@color/grayfont"
        android:layout_marginLeft="5dp"
        android:maxLines="1"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:visibility="gone" />
</LinearLayout>