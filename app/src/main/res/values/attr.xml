<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PageIndicatorView">
        <attr name="piv_orientation">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>

        <attr name="piv_viewPager" format="reference" />
        <attr name="piv_select" format="integer" />

        <attr name="piv_count" format="integer" />
        <attr name="piv_dynamicCount" format="boolean" />

        <attr name="piv_radius" format="dimension" />
        <attr name="piv_padding" format="dimension" />
        <attr name="piv_strokeWidth" format="dimension" />
        <attr name="piv_scaleFactor" format="float" />
        <attr name="piv_autoVisibility" format="boolean" />

        <attr name="piv_unselectedColor" format="color" />
        <attr name="piv_selectedColor" format="color" />

        <attr name="piv_interactiveAnimation" format="boolean" />
        <attr name="piv_animationDuration" format="integer" />
        <attr name="piv_animationType">
            <enum name="none" value="0" />
            <enum name="color" value="1" />
            <enum name="scale" value="2" />
            <enum name="worm" value="3" />
            <enum name="slide" value="4" />
            <enum name="fill" value="5" />
            <enum name="thinWorm" value="6" />
            <enum name="drop" value="7" />
            <enum name="swap" value="8" />
        </attr>
        <attr name="piv_rtl_mode">
            <enum name="on" value="0" />
            <enum name="off" value="1" />
            <enum name="auto" value="2" />
        </attr>
    </declare-styleable>
    <declare-styleable name="TagFlowLayout">
        <attr name="auto_select_effect" format="boolean"></attr>
        <attr name="max_select" format="integer"></attr>
        <attr name="gravity">
            <enum name="left" value="-1" />
            <enum name="center" value="0" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="suitlines">
        <attr name="xySize" format="float" />
        <attr name="xyColor" format="reference|color" />
        <attr name="lineType">
            <enum name="curve" value="0" />
            <enum name="segment" value="1" />
        </attr>
        <attr name="lineStyle">
            <enum name="solid" value="0" />
            <enum name="dashed" value="1" />
        </attr>
        <attr name="needEdgeEffect" format="boolean" />
        <attr name="colorEdgeEffect" format="reference|color" />
        <attr name="needClickHint" format="boolean" />
        <attr name="colorHint" format="reference|color" />
        <attr name="maxOfVisible" format="integer" />
        <attr name="countOfY" format="integer" />
    </declare-styleable>

    <declare-styleable name="inputBox">
        <attr name="passwordCount" format="integer"/>
        <attr name="stokeColor" format="color"/>
        <attr name="symbolColor" format="color"/>
        <attr name="symbolRadius" format="dimension"/>
        <attr name="inputBoxStroke" format="dimension"/>

    </declare-styleable>
    <declare-styleable name="materialStatusProgressAttr">
        <attr name="arcColor" format="reference|color"/>
        <attr name="progressBarBorderWidth" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="DoubleScrollViewWrapper">
        <attr name="doublescrollviewwrapper_padding" format="integer"></attr>
    </declare-styleable>
    <declare-styleable name="Page">
        <attr name="pageone_padding" format="integer"></attr>
    </declare-styleable>
    <declare-styleable name="NineGridView">
        <attr name="ngv_singleImageSize" format="dimension"/>
        <attr name="ngv_singleImageRatio" format="float"/>
        <attr name="ngv_gridSpacing" format="dimension"/>
        <attr name="ngv_maxSize" format="integer"/>
        <attr name="ngv_mode" format="enum">
            <enum name="fill" value="0"/>
            <enum name="grid" value="1"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="NumberButton">
        <attr name="editable" format="boolean"/>
        <attr name="buttonWidth" format="dimension" />
        <attr name="editextWidth" format="dimension" />
        <attr name="textSize" format="dimension"/>
        <attr name="textColor" format="color"/>
        <attr name="backgroud" format="reference"/>
        <attr name="individer" format="reference"/>
        <attr name="addBackground" format="reference"/>
        <attr name="subBackground" format="reference"/>
    </declare-styleable>
    <declare-styleable name="CountDownButton">
        <attr name="countDownFormat" format="string"/>
        <attr name="countDown" format="float"/>
        <attr name="countDownInterval" format="float"/>
        <attr name="enableCountDown" format="boolean"/>
    </declare-styleable>
</resources>