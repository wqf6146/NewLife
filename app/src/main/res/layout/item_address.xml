<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_marginBottom="10dp"
    android:background="@color/white"
    android:id="@+id/ia_ll_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/content_text_s16"
            android:textColor="@color/grayfont"
            android:text="丫丫"
            android:id="@+id/ia_tv_name"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/content_text_s14"
            android:textColor="@color/grayfont"
            android:text="182****3085"
            android:id="@+id/ia_tv_phone"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:id="@+id/ia_tv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="河北省保定市北市区金砖七一东路炫彩sohoB座704"
        android:textColor="@color/grayfont"
        android:textSize="@dimen/content_text_s12" />

    <View
        android:layout_width="match_parent"
        android:background="@mipmap/suggestion_line"
        android:layout_height="0.5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ia_img_defaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:src="@mipmap/ic_nor_bluenike" />

        <TextView
            android:id="@+id/ia_tv_defalutaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设为默认"
            android:textColor="@color/theme_bule"
            android:textSize="@dimen/content_text_s14" />

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1px"/>

        <TextView
            android:id="@+id/ia_tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑"
            android:textColor="@color/grayfont"
            android:textSize="@dimen/content_text_s14" />

        <View
            android:layout_width="1px"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/grayfont"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/ia_tv_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:textColor="@color/grayfont"
            android:textSize="@dimen/content_text_s14" />


    </LinearLayout>

</LinearLayout>