<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:padding="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <View
                android:layout_width="5dp"
                android:background="@color/orange"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/ihgy_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="团购好货"
                android:textColor="@color/orange"
                android:textSize="@dimen/content_text_s14" />
        </LinearLayout>


        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1px"/>

        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/content_text_s12"
            android:textColor="@color/grayfont"
            android:text="全部"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="15dp"
            android:src="@mipmap/arrowright"
            android:layout_height="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingRight="5dp"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"
            android:layout_margin="1dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ihg_img_shop_1"
                android:layout_width="match_parent"
                android:src="@mipmap/text_car"
                android:layout_height="150dp"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/ihg_tv_shopname_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:text="婴儿多功能U型学步车婴儿多功能U型学步车婴儿多功能U型学步车婴儿多功能U型学步车"
                android:textColor="@color/black_bg"
                android:textSize="@dimen/content_text_s12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/ihg_tv_price_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$6.50"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/content_text_s16" />

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1px"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:background="@color/common_pink"
                    android:padding="2dp"
                    android:textSize="@dimen/content_text_s12"
                    android:textColor="@color/white"
                    android:text="满减"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/ihg_tv_sale_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="已售3621件"
                    android:textColor="@color/grayfont"
                    android:textSize="@dimen/content_text_s10" />

            </RelativeLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingRight="10dp"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:layout_margin="1dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ihg_img_shop_2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@mipmap/text_shopcar"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/ihg_tv_shopname_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:text="婴儿多功能U型学步车"
                android:textColor="@color/black_bg"
                android:textSize="@dimen/content_text_s12" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/ihg_tv_price_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$6.50"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/content_text_s16" />

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/ihg_tv_sale_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="已售3621件"
                    android:textColor="@color/grayfont"
                    android:textSize="@dimen/content_text_s10" />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/ihgy_tv_groupsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tv_bg_circle_orange"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:text="共25933人参团"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>