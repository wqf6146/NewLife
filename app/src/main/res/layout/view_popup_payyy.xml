<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8f000000">

    <LinearLayout
        android:id="@+id/popup_animas"
        android:layout_width="257dp"
        android:layout_height="225dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:background="@mipmap/checkout_pop">

        <View
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_checkout_sub"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="40dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/ed_checkout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:inputType="number"
                android:textSize="20sp"
                android:textColor="@color/theme_bule"
                android:hint="0"
                />

            <TextView
                android:id="@+id/tv_checkout_add"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="0dp">

            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/theme_bule"
                android:textSize="@dimen/content_text_s14"
                android:text="使用丫丫付款(剩余丫丫)"
                android:id="@+id/vpp_tv_yayamin"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:textSize="@dimen/content_text_s12"
                android:layout_marginTop="15dp"
                android:textColor="@color/grayfont_1"
                android:id="@+id/vpp_tv_yayamax"
                android:gravity="center_horizontal"
                android:text="1丫丫"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/vpp_ll_bottombar"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_checkout_diss"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_checkout_ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>