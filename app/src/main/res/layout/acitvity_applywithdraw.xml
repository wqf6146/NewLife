<?xml version="1.0" encoding="utf-8"?>
<com.yhkj.yymall.view.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:orientation="horizontal"
        android:background="@color/white"
        app:layout_heightPercent="15%"
        app:layout_widthPercent="100%"
        android:layout_height="0dp">

        <TextView
            android:layout_width="0dp"
            android:drawableTop="@mipmap/ic_nor_tixian1"
            android:layout_weight="1"
            android:text="提交申请"
            android:drawablePadding="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_nor_gray_arrowright"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0dp"
            android:drawableTop="@mipmap/ic_nor_tixian2"
            android:layout_weight="1"
            android:text="YiYiYaYa转账"
            android:drawablePadding="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_nor_gray_arrowright"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0dp"
            android:drawableTop="@mipmap/ic_nor_tixian3"
            android:layout_weight="1"
            android:text="提现成功"
            android:drawablePadding="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_heightPercent="35%"
        app:layout_widthPercent="100%">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/stroke_square_gray_1"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="余额："
                android:textSize="@dimen/content_text_s14" />

            <TextView
                android:id="@+id/aa_tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="0.00元"
                android:textColor="@color/theme_bule"
                android:textSize="@dimen/content_text_s14" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="3dp"
            android:layout_weight="3"
            android:background="@drawable/bg_white_square_gray"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayfont_1"
                    android:textSize="@dimen/content_text_s14"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:text="提现方式:" />

                <Spinner
                    android:id="@+id/aa_spinner"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:entries="@array/apply"
                    android:layout_weight="1">

                </Spinner>

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1px"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@mipmap/suggestion_line" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="5dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayfont_1"
                    android:layout_marginLeft="5dp"
                    android:textSize="@dimen/content_text_s14"
                    android:layout_gravity="center_vertical"
                    android:text="真实姓名:" />

                <EditText
                    android:id="@+id/aa_et_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请输入真实姓名"
                    android:paddingLeft="10dp"
                    android:textColor="@color/grayfont_1"
                    android:textColorHint="@color/grayfont_2"
                    android:textSize="@dimen/content_text_s14" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:background="@mipmap/suggestion_line"
                android:layout_height="1px"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="5dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayfont_1"
                    android:layout_marginLeft="5dp"
                    android:textSize="@dimen/content_text_s14"
                    android:layout_gravity="center_vertical"
                    android:text="提现账户:" />

                <EditText
                    android:id="@+id/aa_et_acount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请输入提现账户"
                    android:paddingLeft="10dp"
                    android:textColor="@color/grayfont_1"
                    android:textColorHint="@color/grayfont_2"
                    android:textSize="@dimen/content_text_s14" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:background="@mipmap/suggestion_line"
                android:layout_height="1px"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayfont_1"
                    android:layout_marginLeft="5dp"
                    android:textSize="@dimen/content_text_s14"
                    android:layout_gravity="center_vertical"
                    android:text="提现金额:" />

                <EditText
                    android:id="@+id/aa_et_price"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请输入提现金额"
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:textColor="@color/grayfont_1"
                    android:textColorHint="@color/grayfont_2"
                    android:textSize="@dimen/content_text_s14" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/redfont"
                    android:textSize="@dimen/title_text_s12"
                    android:id="@+id/aa_tv_tip"
                    android:visibility="gone"
                    android:text="金额超过可提现余额"
                    android:layout_height="match_parent" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/aa_tv_apply"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/tv_bg_circle_deepblue"
        android:gravity="center"
        android:text="24小时内到账，申请提现"
        android:textColor="@color/white"
        android:textSize="@dimen/content_text_s14"
        app:layout_heightPercent="7%"
        app:layout_widthPercent="95%" />

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@mipmap/suggestion_line"
            android:layout_height="1px"/>

        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/content_text_s14"
            android:textColor="@color/grayfont_1"
            android:text="小贴士"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@mipmap/suggestion_line"
            android:layout_height="1px"/>

    </LinearLayout>

    <WebView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:id="@+id/aa_webview"
        android:layout_height="0dp"/>

</com.yhkj.yymall.view.PercentLinearLayout >