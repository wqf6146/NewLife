<?xml version="1.0" encoding="utf-8"?>
<com.yhkj.yymall.view.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/theme_bule"
    android:orientation="vertical">



    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_widthPercent="80%"
        android:layout_gravity="center_horizontal"
        app:layout_heightPercent="10%">

        <ImageView
            android:id="@+id/img_register_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@mipmap/login_phone" />

        <EditText
            android:id="@+id/ed_register_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/img_register_phone"
            android:background="@drawable/ed_null"
            android:hint="请输入11位手机号码"
            android:inputType="number"
            android:maxLength="11"
            android:textColorHint="#AAC2EB"
            android:textColor="#FFFFFF"
            android:textCursorDrawable="@null"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ed_register_phone"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/img_register_phone"
            android:background="#AAC2EB" />
    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_widthPercent="80%"
        android:layout_gravity="center_horizontal"
        app:layout_heightPercent="10%">


        <ImageView
            android:id="@+id/img_register_psw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@mipmap/login_lock" />

        <ImageView
            android:id="@+id/img_register_eye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@mipmap/login_eye" />

        <EditText
            android:id="@+id/ed_register_psw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toLeftOf="@+id/img_register_eye"
            android:layout_toRightOf="@+id/img_register_psw"
            android:background="@drawable/ed_null"
            android:hint="请输入登录密码"
            android:textColor="#FFFFFF"
            android:inputType="textPassword"
            android:textCursorDrawable="@null"
            android:maxLength="12"
            android:textColorHint="#AAC2EB"
            android:textSize="15sp" />

        <View
            android:id="@+id/view_register"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ed_register_psw"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/img_register_psw"
            android:background="#AAC2EB" />
    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_widthPercent="80%"
        android:layout_gravity="center_horizontal"
        app:layout_heightPercent="10%">


        <ImageView
            android:id="@+id/img_register_psw_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@mipmap/login_lock" />

        <ImageView
            android:id="@+id/img_register_eye_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@mipmap/login_eye" />

        <EditText
            android:id="@+id/ed_register_psw_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toLeftOf="@+id/img_register_eye_2"
            android:layout_toRightOf="@+id/img_register_psw_2"
            android:background="@drawable/ed_null"
            android:hint="请再次输入登录密码"
            android:textColor="#FFFFFF"
            android:inputType="textPassword"
            android:textCursorDrawable="@null"
            android:maxLength="12"
            android:textColorHint="#AAC2EB"
            android:textSize="15sp" />

        <View
            android:id="@+id/view_register_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ed_register_psw_2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/img_register_psw_2"
            android:background="#AAC2EB" />
    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_widthPercent="80%"
        android:layout_gravity="center_horizontal"
        app:layout_heightPercent="10%">

        <ImageView
            android:id="@+id/img_register_yzm"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:background="@mipmap/login_yzm"
            />

        <Button
            android:id="@+id/bt_register_yzm"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bt_yuan_white"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="获取验证码"
            android:textColor="@color/theme_bule"
            android:textSize="13sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/bt_register_yzm"
            android:layout_toRightOf="@+id/img_register_yzm"
            android:orientation="vertical">

            <EditText
                android:id="@+id/ed_register_yzm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/ed_null"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="6"
                android:textColorHint="#AAC2EB"
                android:textCursorDrawable="@null"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="#AAC2EB" />
        </LinearLayout>
    </android.support.percent.PercentRelativeLayout>>

    <LinearLayout
        android:id="@+id/ll_register_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/rl_register_gou1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <ImageView
                    android:id="@+id/img_register_gou1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/login_gou1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="我已阅读并同意"
                    android:textColor="#FFFFFF"
                    android:textSize="14dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_register_fwxy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="服务协议"
                android:textColor="#FFFFFF"
                android:textSize="14dp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/bt_register_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bt_yuan_hui"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="完 成"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

</com.yhkj.yymall.view.PercentLinearLayout>