<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:id="@+id/aw_view_statusbar"
        android:background="@color/theme_bule"
        android:layout_height="0dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/theme_bule"
        android:layout_height="45dp">

        <ImageView
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:src="@mipmap/ic_nor_arrowleft"
            android:id="@+id/aw_img_back"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:id="@+id/aw_tv_title"
            android:textSize="@dimen/title_text_s16"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <WebView
        android:layout_width="match_parent"
        android:id="@+id/aw_webview"
        android:layout_height="match_parent"></WebView>

</LinearLayout>
